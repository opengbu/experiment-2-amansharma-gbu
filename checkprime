// To check whether a number is prime or not.

int main()
{
  int n, i,prime;
  
  cout<< "Enter a positive integer: ";
  cin>> n;
  for(i = 2; i <= n / 2; ++i)
  {
      if(n % i == 0)
      {
          prime = false;
          break;
      }
  }
  if (prime)
      cout << "This is a prime number";
  else
      cout << "This is not a prime number";
  return 0;
}
